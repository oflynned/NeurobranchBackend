<div id="page-content-wrapper dashboard">
    <div class="container-fluid content-main">
        <div class="row">
            <div class="col-lg-12">
                <!-- title -->
                <div class="page-header">
                    <h3>{{candidate._id}}</h3>
                </div>
            </div>
        </div>

        <!-- container for holding trial data -->
        <div id="dashboard-content-holder">
            <div class="col-md-6 text-left">
                <div><strong>Contact Email:</strong> {{candidate.email}}</div>
                <div><strong>Current City:</strong> {{candidate.location}}</div>
                <div><strong>Score:</strong> {{candidate.score}}</div>

                <button class="btn btn-primary">
                    <a href="mailto:{{candidate.email}}" style="color: white">Contact</a>
                </button>

                {{#if trialid}}
                    <button class="btn btn-success">Demarcate Verified</button>
                    <button class="btn btn-danger">Remove</button>
                {{/if}}
            </div>
        </div>
    </div>
</div>