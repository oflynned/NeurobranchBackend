<div class="container">
    <!-- title -->
    <div class="page-header text-center">
        <h3>Investigator Sign Up</h3>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 center-form">
            <div class="account-wall center-form">
                <img class="form-image" src="/img/neurobranch_logo.png"
                     alt="">
                <form class="form-signin" method="post" action="/api/create-researcher">
                    <!-- fields -->
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Forename" name="forename" required
                               autofocus>
                        <input type="text" class="form-control" placeholder="Surname" name="surname" required>
                        <input type="text" class="form-control" placeholder="Username" name="username" required>
                        <select class="form-control" name="institute" id="institute">
                            <option value="def_institute_placeholder" disabled selected>Institute</option>
                            <option value="Dublin City University">Dublin City University</option>
                            <option value="Trinity College Dublin">Trinity College Dublin</option>
                            <option value="University College Dublin">University College Dublin</option>
                        </select>
                    </div>

                    <input type="email" class="form-control" placeholder="Email" name="email" id="to" required>
                    <input type="email" class="form-control" placeholder="Confirm email" name="conf_email" required>
                    <input type="password" class="form-control" placeholder="Password" name="password" required>
                    <input type="password" class="form-control" placeholder="Confirm password" name="conf_pass"
                           required>

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
                    <label class="pull-left checkbox checkbox-left-align">
                        <input type="checkbox" value="remember-me" required>
                        I agree to the <a href="#">terms of use</a>, <a href="#">privacy policy</a>, & <a href="#">cookie
                        policies</a>.
                    </label>
                    <div class="center-text">
                        Already have an account? <a href="/users/login" class="need-help">Log in.</a><span
                            class="clearfix"></span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        var from,to,subject,text;
        $("#send_email").click(function(){
            to=$("#to").val();
            $("#message").text("Sending email...please wait");
            $.get("http://localhost:3000/send",{to:to},function(data){
                if(data=="sent")
                {
                    $("#message").empty().html("<p>Email is been sent at "+to+" . Please check inbox !</p>");
                }

            });
        });
    });
</script>