<div id="page-content-wrapper">
    <div class="container-fluid content-main">
        <div class="row">
            <div class="col-lg-12">
                <!-- title -->
                <div class="page-header">
                    <h3>{{trialName}}<br>
                        <small>{{startTime}} - {{endTime}}</small>
                    </h3>
                </div>
            </div>
        </div>

        <!-- container for holding trial data -->
        <div id="dashboard-content-holder">
            <div class="row text-center">
                <div class="col-md-6">
                    <img src="{{imageResource}}">
                </div>
                <div class="col-md-6 text-left">
                    <div><strong>Type:</strong> {{trialType}}</div>
                    <div><strong>Organisation:</strong> {{organisation}}</div>
                    <div><strong>Specialisation:</strong> {{specialisation}}</div>
                </div>
            </div>

            <div class="page-header"><h3>Statistics</h3></div>
            <div class="page-header"><h3>Updates</h3></div>
            <div class="page-header"><h3>About the trial</h3></div>
            <div>{{trialDescription}}</div>
        </div>
    </div>
</div>